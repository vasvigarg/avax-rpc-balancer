{
  "name": "avax-rpc-balancer",
  "version": "1.0.0",
  "description": "HTTPS Load Balancer for Blockchain Nodes with focus on Avalanche",
  "main": "dist/src/lambda/router/index.js",
  "types": "dist/src/lambda/router/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/lambda/router/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/lambda/router/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "deploy": "./scripts/deploy.sh"
  },
  "keywords": [
    "blockchain",
    "load-balancer",
    "avalanche",
    "rpc",
    "proxy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1409.0",
    "axios": "^1.4.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "prom-client": "^15.1.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
