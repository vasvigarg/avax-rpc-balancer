{
  "name": "avax-rpc-balancer",
  "version": "1.0.0",
  "description": "Intelligent RPC Load Balancer for Blockchain Nodes",
  "main": "dist/lambda/router/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prestart:dev": "npm run build",
    "start:dev": "serverless offline start --httpPort 3000",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "infra:plan": "cd infrastructure/terraform && terraform plan",
    "infra:apply": "cd infrastructure/terraform && terraform apply",
    "local:up": "docker-compose -f infrastructure/docker-compose.yml up --build -d",
    "local:down": "docker-compose -f infrastructure/docker-compose.yml down"
  },
  "keywords": [
    "blockchain",
    "load-balancer",
    "rpc",
    "aws",
    "lambda",
    "nginx",
    "typescript"
  ],
  "author": "Vasvi Garg",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.137",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^13.9.0",
    "serverless-plugin-typescript": "^2.1.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1611.0",
    "axios": "^1.6.8",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
