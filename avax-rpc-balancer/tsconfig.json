{
    "compilerOptions": {
      "target": "ES2020", // Target Node.js 18+ runtime on Lambda
      "module": "CommonJS", // Standard for Node.js Lambdas
      "lib": ["ES2020"],
      "outDir": "./dist", // Output directory for compiled JS
      "rootDir": "./src", // Root directory of source files
      "strict": true,
      "types": ["node", "aws-lambda"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "sourceMap": true, // Generate source maps for easier debugging
      "moduleResolution": "node",
      "declaration": true // Generate .d.ts files (optional)
    },
    "include": ["src/**/*.ts"], // Files to include in compilation
    "exclude": ["node_modules", "**/*.test.ts", "dist"] // Files to exclude
  }